}

/**
 * list의 첫번째 노드 삭제
 */
int deleteFirst(listNode* h) {


	return 1;

}


/**
 * 리스트의 링크를 역순으로 재 배치
 */
int invertList(listNode* h) {

       listNode* n = h->first;

	listNode* next, * prev;
	next, prev = NULL;


	if (h == NULL)
	{
		printf("Head Node is not initialized.\n");
		return 0;
	}
	if (h->first == NULL)
	{
		printf("Linked list is empty!!\n\n");    // 리스트가 비었으면
		return 0;
	}

	while (h->first != NULL) {
		next = prev;						
		prev = n;						

		n = n->rlink;				//다음 노드의 위치 저장
		prev->rlink = next;
		prev->llink = n;
	}

	h->first = prev;

	return 0;
}



